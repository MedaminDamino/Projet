@page "/admin/roleclaims"
@using System.Text.Json
@attribute [Authorize(Roles = "SuperAdmin")]
@inject HttpClient Http

<h3 class="mb-4">Role Claims</h3>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
    <Toast Visible="showSuccessToast"
           Type="ToastType.Success"
           Message="@(successMessage ?? string.Empty)"
           OnClose="HideSuccessToast"
           CssClass="shadow" />
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Select role</label>
            <select class="form-select" @onchange="OnRoleChanged" disabled="@(isRolesLoading || roles.Count == 0)">
                <option value="">-- Choose a role --</option>
                @foreach (var role in roles)
                {
                    <option value="@role.Id" selected="@((role.Id == selectedRoleId))">@role.Name</option>
                }
            </select>
        </div>
    </div>
</div>

@if (isRolesLoading)
{
    <div class="text-center text-muted py-4">
        <div class="spinner-border text-primary mb-3" role="status"></div>
        <div>Loading roles...</div>
    </div>
}
else if (roles.Count == 0)
{
    <div class="alert alert-info">Create at least one role to manage claims.</div>
}
else if (string.IsNullOrEmpty(selectedRoleId))
{
    <div class="alert alert-secondary">Select a role to view and manage its claims.</div>
}
else
{
    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <strong>Claims</strong>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Type</th>
                                    <th>Value</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (isClaimsLoading)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4">
                                            <div class="spinner-border text-primary" role="status"></div>
                                            <div class="mt-2 text-muted">Loading claims...</div>
                                        </td>
                                    </tr>
                                }
                                else if (claims.Count == 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            No claims for this role yet.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var claim in claims)
                                    {
                                        <tr>
                                            <td class="align-middle">@claim.ClaimType</td>
                                            <td class="align-middle">@claim.ClaimValue</td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteClaimAsync(claim.Id)">
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <strong>Add Claim</strong>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(claimErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @claimErrorMessage
                            <button type="button" class="btn-close" aria-label="Close" @onclick="() => claimErrorMessage = null"></button>
                        </div>
                    }
                    <EditForm Model="@claimForm" OnValidSubmit="AddClaimAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-3">
                            <label class="form-label">Claim Type</label>
                            <InputText class="form-control" @bind-Value="claimForm.ClaimType" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Claim Value</label>
                            <InputText class="form-control" @bind-Value="claimForm.ClaimValue" />
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="ResetClaimForm">Reset</button>
                            <button type="submit" class="btn btn-primary" disabled="@isClaimsLoading">Add Claim</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private readonly JsonSerializerOptions jsonOptions = new() { PropertyNameCaseInsensitive = true };
    private List<RoleDto> roles = new();
    private List<RoleClaimDto> claims = new();
    private RoleClaimCreateDto claimForm = new();

    private string? selectedRoleId;
    private bool isRolesLoading = true;
    private bool isClaimsLoading;

    private string? errorMessage;
    private string? claimErrorMessage;
    private bool showSuccessToast;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadRolesAsync();
    }

    private async Task LoadRolesAsync()
    {
        try
        {
            isRolesLoading = true;
            var response = await Http.GetAsync("api/Roles");
            var apiResponse = await DeserializeAsync<List<RoleDto>>(response);
            roles = apiResponse?.Data ?? new List<RoleDto>();

            if (!response.IsSuccessStatusCode || apiResponse is { Success: false })
            {
                errorMessage = apiResponse?.GetUserMessage($"Failed to load roles ({response.StatusCode}).");
            }
            else
            {
                errorMessage = null;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Unexpected error loading roles: {ex.Message}";
        }
        finally
        {
            isRolesLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadClaimsAsync()
    {
        if (string.IsNullOrEmpty(selectedRoleId))
        {
            claims = new List<RoleClaimDto>();
            return;
        }

        try
        {
            isClaimsLoading = true;
            var response = await Http.GetAsync($"api/RoleClaims/by-role/{selectedRoleId}");
            var apiResponse = await DeserializeAsync<List<RoleClaimDto>>(response);
            claims = apiResponse?.Data ?? new List<RoleClaimDto>();

            if (!response.IsSuccessStatusCode || apiResponse is { Success: false })
            {
                claimErrorMessage = apiResponse?.GetUserMessage($"Failed to load claims ({response.StatusCode}).");
            }
            else
            {
                claimErrorMessage = null;
            }
        }
        catch (Exception ex)
        {
            claimErrorMessage = $"Unexpected error loading claims: {ex.Message}";
        }
        finally
        {
            isClaimsLoading = false;
            StateHasChanged();
        }
    }

    private async Task AddClaimAsync()
    {
        if (string.IsNullOrEmpty(selectedRoleId))
        {
            claimErrorMessage = "Select a role before adding claims.";
            return;
        }

        claimForm.RoleId = selectedRoleId;

        try
        {
            var response = await Http.PostAsJsonAsync("api/RoleClaims", claimForm);
            var apiResponse = await DeserializeAsync<RoleClaimDto>(response);
            if (!response.IsSuccessStatusCode || apiResponse is { Success: false })
            {
                claimErrorMessage = apiResponse?.GetUserMessage($"Failed to add claim ({response.StatusCode}).");
                return;
            }

            claimErrorMessage = null;
            ResetClaimForm();
            await LoadClaimsAsync();
            ShowSuccessToast("Claim added successfully");
        }
        catch (Exception ex)
        {
            claimErrorMessage = $"Unexpected error adding claim: {ex.Message}";
        }
    }

    private async Task DeleteClaimAsync(int claimId)
    {
        if (string.IsNullOrEmpty(selectedRoleId))
        {
            return;
        }

        try
        {
            var response = await Http.DeleteAsync($"api/RoleClaims/{claimId}");
            var apiResponse = await DeserializeAsync<object>(response);
            if (!response.IsSuccessStatusCode || apiResponse is { Success: false })
            {
                claimErrorMessage = apiResponse?.GetUserMessage($"Failed to delete claim ({response.StatusCode}).");
                return;
            }

            claimErrorMessage = null;
            await LoadClaimsAsync();
            ShowSuccessToast("Claim deleted successfully");
        }
        catch (Exception ex)
        {
            claimErrorMessage = $"Unexpected error deleting claim: {ex.Message}";
        }
    }

    private async Task OnRoleChanged(ChangeEventArgs args)
    {
        selectedRoleId = args?.Value?.ToString();
        claims = new List<RoleClaimDto>();
        ResetClaimForm();

        if (!string.IsNullOrEmpty(selectedRoleId))
        {
            await LoadClaimsAsync();
        }
        else
        {
            StateHasChanged();
        }
    }

    private void ResetClaimForm()
    {
        claimForm = new RoleClaimCreateDto();
    }

    private void ShowSuccessToast(string message)
    {
        successMessage = message;
        showSuccessToast = true;
        StateHasChanged();
    }

    private void HideSuccessToast()
    {
        successMessage = null;
        showSuccessToast = false;
        StateHasChanged();
    }

    private async Task<ApiResponse<T>?> DeserializeAsync<T>(HttpResponseMessage response)
    {
        try
        {
            var content = await response.Content.ReadAsStringAsync();
            if (string.IsNullOrWhiteSpace(content))
            {
                return null;
            }

            return JsonSerializer.Deserialize<ApiResponse<T>>(content, jsonOptions);
        }
        catch (JsonException)
        {
            return null;
        }
    }
}
