@page "/user/profile"
@layout UserLayout
@attribute [Authorize]

<h3>My Profile</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Personal Information</div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" value="User" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="user@example.com" />
                    </div>
                    <button type="button" class="btn btn-primary">Update Profile</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Reading Stats</div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Books Read
                        <span class="badge bg-primary rounded-pill">12</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Reviews Written
                        <span class="badge bg-primary rounded-pill">5</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Average Rating Given
                        <span class="badge bg-primary rounded-pill">4.2</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

