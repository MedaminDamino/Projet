    .spinner-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
        width: 100%;
    }

    .spinner {
        position: relative;
        width: 64px;
        height: 64px;
        margin-bottom: 1.5rem;
    }

